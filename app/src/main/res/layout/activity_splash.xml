<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:id="@+id/imgSplashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/msb_logo_big" />

    <com.haksoy.pertem.tools.MyDoubleArcProgress
        android:id="@+id/progress3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/imgSplashLogo"
        android:layout_centerHorizontal="true"
        app:insideArcColor="@color/text_color_3"
        app:insideArcRadius="40dp"
        app:outsideArcColor="@color/colorPrimary"
        app:outsideArcRadius="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="@string/splash_text"
        android:textColor="@color/text_color_3"
        android:textSize="13sp" />
</RelativeLayout>